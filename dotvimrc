set mouse=
set number
set smarttab
set smartindent
inoremap jk <ESC>
cnoremap jk <ESC>
nnoremap <SPACE> :w<CR>
set expandtab shiftwidth=4 softtabstop=4
set hlsearch
syntax on

" Uncomment the following to have Vim jump to the last position when
" reopening a file
if has("autocmd")
  au BufReadPost * if line("'\"") > 0 && line("'\"") <= line("$")
    \| exe "normal! g'\"" | endif
endif
